{
  "name": "impro-css",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "postcss -u postcss-import -u postcss-cssnext -d dist/styles src/styles/index.css",
    "copy": "cp -r src/*.html src/scripts/ src/images/ dist",
    "dev": "run-p copy serve watch:copy watch:build",
    "serve": "http-server dist",
    "watch:copy": "chokidar \"src/**/*!(.css)\" -c \"npm run copy\"",
    "watch:build": "postcss -w -u postcss-import -u postcss-cssnext -d dist/styles src/styles/index.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barneycarroll/impro-css.git"
  },
  "author": "Barney Carroll <barney.carroll@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/barneycarroll/impro-css/issues"
  },
  "homepage": "https://github.com/barneycarroll/impro-css#readme",
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "http-server": "^0.9.0",
    "npm-run-all": "^4.0.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0"
  }
}
